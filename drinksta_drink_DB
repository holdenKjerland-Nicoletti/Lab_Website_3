DROP TABLE drinks;
CREATE TABLE IF NOT EXISTS drinks (
  name VARCHAR(50),               /* Name of the drink*/
  ID INT SERIAL PRIMARY KEY,      /* Drink ID*/
  category VARCHAR(30),           /* Final score of the game for the visiting team */
  ingredients  TEXT[],            /* list of ingredients; strings stored in an array*/
  description VARCHAR(50),        /* drink description; eneter short txt*/
);

CREATE SEQUENCE drinks_seq
  start 0
  increment 1;


INSERT INTO drinks(name, ID, category, ingredients, description)
VALUES('Cosmopolitan', nextval('drinks_seq'), 'vodka', ARRAY ['cointreau','cranberry juice','lime']),
('Vodka Martini', nextval('drinks_seq'), 'vodka', ARRAY ['dry vermouth']),
('Vodka Tonic', nextval('drinks_seq'), 'vodka', ARRAY ['tonic water','lemon']),
('Screwdriver', nextval('drinks_seq'), 'vodka', ARRAY ['orange juice']),
;


